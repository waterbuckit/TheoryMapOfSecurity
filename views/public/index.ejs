<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0>
    <style> body {padding: 0; margin: 0;} </style>
    <script src="p5.min.js"></script>
    <script src="addons/p5.dom.min.js"></script>
    <script src="addons/p5.sound.min.js"></script>
    <script src="map.js"></script>
    <style>
        body {
            background-color: #685f76;
            padding: 10px 10px 10px 10px;
        }
        h2 {
            color: #f6f8ff;
            font-family: Georgia, serif; 
        }
        .button {
            background-color: #686b7d;
            text-align: left;
            border: none;
            width: 50%;
            color: white;
            padding: 16px 32px;
            font-size: 16px;
            margin: 4px 2px;
            opacity: 0.6;
            transition: 0.3s;
            display: inline-block;
            text-decoration: none;
            cursor: pointer;
        }   
        .button:hover {
            opacity: 1
        }
        .editButton {
            background-color:#4c5357;
            text-align: left;
            border: none;
            width: 100%;
            color: white;
            padding: 16px 32px;
            font-size: 16px;
            margin: 4px 2px;
            opacity: 0.6;
            transition: 0.3s;
            display: inline-block;
            text-decoration: none;
            cursor: pointer;
        }   
        .editButton:hover {
            opacity: 1
        }
        #theoryButton {
        }
        #mainDiv {
            padding: 2px 10px 10px 10px;
            background-color: #1f2233;
            box-shadow: 0px 0px 10px 2px #1f2233;
            margin: auto;
            height: 700px;
            width: 85%;
        }
        #theorySelectForm {
            width: 30%;
            display: inline-block;
        }

        #containerDiv {
            float: left;
        }
        #div1 {
            border-bottom-style: dotted;
            border-color: #1EB980;
            padding: 2px 10px 5px 10px;
            margin: auto;
            display: inline-block;
        }
        #theoriesDiv {
            padding: 0px 10px 5px 0px;
            height: 500px;
            max-width: 340px;
            overflow-y: scroll;
            overflow-x: hidden;
        }
        #keyWordDiv {
            padding: 0px 10px 5px 10px;
            height: 500px;
            overflow-y: scroll;
            overflow-x: hidden;
        }
        #div2{
            margin-right: 250px;
            float: right;
        }
        .tab {
            overflow: hidden;
            border: 1px solid #ccc;
            background-color: #f1f1f1;
        }
        .tab button {
            background-color: inherit;
            float: left;
            border: none;
            outline: none;
            cursor: pointer;
            padding: 14px 16px;
            transition: 0.3s;
            font-size: 17px;
        } 
        .tab button:hover {
            background-color: #ddd;
        }
        .tab button.active {
            background-color: #ccc;
        }
        .tabcontent {
            display: none;
            padding: 6px 12px;
            border-top: none;
        }
        ::-webkit-scrollbar {
            width: 7px;
        }       
        ::-webkit-scrollbar-track {
            -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3); 
            -webkit-border-radius: 10px;
             border-radius: 10px;
        }
        ::-webkit-scrollbar-thumb {
            -webkit-border-radius: 10px;
            border-radius: 10px;
            background: #1EB980;
        }
    </style>
  </head>
  <body>
    <div id="mainDiv">
        <div id="containerDiv">
            <div id="div1">
                <h2>The Security Theory Map</h2>
            </div>
            <div style="height:10px;width:100%;clear:both;"></div>
            <div class="tab">
                <button class="tablinks" onclick="changeTab(event, 'theoriesDiv')" id="defaultOpen">Theories</button>
                <button class="tablinks" onclick="changeTab(event, 'keyWordDiv')">Keywords</button>
            </div>
            <div id="theoriesDiv" class="tabcontent">
                <% theories.forEach(function(theory) {%>
                <div id="theoryButton">
                    <button class="button"><%=theory.theoryName%></button>
                    <form id="theorySelectForm" action="/editTheory" method="POST">
                        <input type="hidden" name="id" value="<%=theory.id%>">
                        <button class="editButton" type="submit">Edit</button>
                    </form>
                </div>
                <%});%>
            </div>
            <div id="keyWordDiv" class="tabcontent">
                <button class="button">placeholderKeyword</button><br>
                <button class="button">placeholderKeyword</button><br>
                <button class="button">placeholderKeyword</button><br>
                <button class="button">placeholderKeyword</button><br>
                <button class="button">placeholderKeyword</button><br>
                <button class="button">placeholderKeyword</button><br>
                <button class="button">placeholderKeyword</button><br>
                <button class="button">placeholderKeyword</button><br>
                <button class="button">placeholderKeyword</button><br>
                <button class="button">placeholderKeyword</button><br>
                <button class="button">placeholderKeyword</button><br>
                <button class="button">placeholderKeyword</button><br>
                <button class="button">placeholderKeyword</button><br>
                <button class="button">placeholderKeyword</button><br>
                <button class="button">placeholderKeyword</button><br>
                <button class="button">placeholderKeyword</button><br>
                <button class="button">placeholderKeyword</button><br>
                <button class="button">placeholderKeyword</button><br>
                <button class="button">placeholderKeyword</button><br>
                <button class="button">placeholderKeyword</button><br>
            </div>
        </div> 
        <div id="div2">
        </div>
    </div>
    <script>
    document.getElementById("defaultOpen").click();
    function changeTab(evt, tabName) {
        var i, tabcontent, tablinks;
        tabcontent = document.getElementsByClassName("tabcontent");
        for (i = 0; i < tabcontent.length; i++) {
            tabcontent[i].style.display = "none";
        }
        tablinks = document.getElementsByClassName("tablinks");
        for (i = 0; i < tablinks.length; i++) {
            tablinks[i].className = tablinks[i].className.replace(" active", "");
        }
        document.getElementById(tabName).style.display = "block";
        evt.currentTarget.className += " active";
    }
    </script>
  </body>
</html>
